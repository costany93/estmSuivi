{% extends 'base.html.twig' %}

{% block title %}Rejoindre le club{% endblock %}

{% block body %}
    <div class="container body-begin">
        <div class="row d-flex justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="estmGreen py-2">
                    <h5 class="text-center text-white">Pourquoi souhaitez-vous rejoindre le club {{club.nom}}?</h5>
                </div>
                <div class="estmBlue py-4 px-3">
                    {{form_start(form)}}
                        {{form_widget(form)}}
                        <div class="row d-flex justify-content-center">
                            <button type="submit" class="btn btn-estm-green">Soumettre</button>
                        </div>
                    {{form_end(form)}}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
