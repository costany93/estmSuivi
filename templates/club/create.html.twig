{% extends "admin/base.html.twig" %}

{% block title %}Nouveau club{% endblock %}

{% block body %}
    <div class="container body-begin">
        <h3 class="text-center estm-text-color-green">Nouveau club</h3>
        {{form_start(form)}}
            <div class="row d-flex justify-content-center">
                <div class="col-lg-5 ombre border">
                    {{form_row(form.nom)}}
                    {{form_row(form.coverImage)}}
                    {{form_row(form.description)}}
                    <div class="row d-flex justify-content-center">
                        <div class="col-lg-5 my-2">
                            <button type="submit" class="btn btn-estm-green btn-block">Ajouter</button>
                        </div>
                    </div>
                </div>
            </div>

        {{form_end(form)}}
    </div>
{% endblock %}